type Query {
    getUser(email: String!): User
    getProduct(productId: String!): Product
    getAllProducts: [Product]
}

type User {
    name: String
    email: String
    userId: String
    role: String
}

type Product {
    productId: String
    name: String
    description: String
    price: Float
    variants: [ProductVariant]
}

type ProductVariant {
    id: String
    price: Float
    quantity: Int
    color: String
    size: String
    imageUrl: String
    isAvailable: Boolean
}
